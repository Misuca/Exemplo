@model IEnumerable<Exemplo.Models.Despesa>

@{
    ViewBag.Title = "Index";
}

<h2>Despesa</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")"><span class="glyphicon glyphicon-plus"></span></a>
</p>

<form class="form-inline" action="/Despesa" method="get" style="margin-bottom: 10px">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Pesquisar..." name="pesquisa">
    </div>
    <button class="btn btn-primary" type="submit">Procurar</button>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataDespesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NºFatura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PedidoCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preço)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeDespesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Viatura.Matricula)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DataDespesa)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NºFatura)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PedidoCompra)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Preço)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NomeDespesa)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Viatura.Matricula)
    </td>
    <td>
        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id_Despesa})"><span class="glyphicon glyphicon-pencil"></span></a>
        <a class="btn btn-primary" href="@Url.Action("Details", new { id = item.Id_Despesa})"><span class="glyphicon glyphicon-search"></span></a>
        <a class="btn btn-primary" href="@Url.Action("Delete", new { id = item.Id_Despesa})"><span class="glyphicon glyphicon-trash"></span></a>
    </td>
</tr>
}

</table>
