@model IEnumerable<Exemplo.Models.Kilometros>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")"><span class="glyphicon glyphicon-plus"></span></a>
</p>
<table class="table">
    <tr>    
        <th>
            @Html.DisplayNameFor(model => model.DataRegisto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantidadeKm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Viatura.Matricula)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DataRegisto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.QuantidadeKm)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Viatura.Matricula)
    </td>
    <td>
        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id_Viatura})"><span class="glyphicon glyphicon-pencil"></span></a>
        <a class="btn btn-primary" href="@Url.Action("Details", new { id = item.Id_Viatura})"><span class="glyphicon glyphicon-search"></span></a>
        <a class="btn btn-primary" href="@Url.Action("Delete", new { id = item.Id_Viatura})"><span class="glyphicon glyphicon-trash"></span></a>
    </td>
</tr>
}

</table>
