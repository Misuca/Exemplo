@model IEnumerable<Exemplo.Models.Fornecedores>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")"><span class="glyphicon glyphicon-plus"></span></a>
</p>

<form class="col-12" action="/Fornecedores" method="get">
    <div class="form-group">
        <div class="col-md-10">
            <input class="form-control" type="text" name="pesquisa" value="" />
            <button class="btn btn-primary" type="submit">Procurar</button>
        </div> 
    </div>  
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeFornecedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIPC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Morada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoPostal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Localidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NomeFornecedor)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NIPC)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Morada)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CodigoPostal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Localidade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telefone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id_Fornecedor})"><span class="glyphicon glyphicon-pencil"></span></a>
        <a class="btn btn-primary" href="@Url.Action("Details", new { id = item.Id_Fornecedor})"><span class="glyphicon glyphicon-search"></span></a>
        <a class="btn btn-primary" href="@Url.Action("Delete", new { id = item.Id_Fornecedor})"><span class="glyphicon glyphicon-trash"></span></a>
    </td>
</tr>
}

</table>
