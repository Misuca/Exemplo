@model IEnumerable<Exemplo.Models.Utilizador>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")"><span class="glyphicon glyphicon-plus"></span></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Morada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoPostal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Localidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Departamento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cargo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telefone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CC)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Morada)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CodigoPostal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Localidade)
    </td>
    <td>
        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id_Utilizador})"><span class="glyphicon glyphicon-pencil"></span></a>
        <a class="btn btn-primary" href="@Url.Action("Details", new { id = item.Id_Utilizador})"><span class="glyphicon glyphicon-search"></span></a>
        <a class="btn btn-primary" href="@Url.Action("Delete", new { id = item.Id_Utilizador})"><span class="glyphicon glyphicon-trash"></span></a>
    </td>
</tr>
}

</table>
